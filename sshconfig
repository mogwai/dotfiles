Host *
    StrictHostKeyChecking no
    # UserKnownHostsFile /dev/null
    ControlMaster auto
    Compression yes
    ControlPath /tmp/ssh-%r@%h:%pA
    ControlPersist yes
    ForwardAgent yes
    ServerAliveInterval 10
    # RemoteForward /run/user/1000/gnupg/S.gpg-agent /run/user/1000/gnupg/S.gpg-agent.extra

